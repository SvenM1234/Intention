{% extends 'base.html.twig' %}

{% block title %}France contractor | Créer une Annonce{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<main class="main-page">
<div class="espace"></div>
    <div class="form-container">
        <h1 class="titre-form">Créer une Annonce</h1>

        {{form_start(form)}}
        <div class="form-group">
            {{ form_row(form.titre,{'attr': {'placeholder': "Titre de l'annonce" }}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description,{'attr': {'placeholder': "Déscription de l'annonce" }}) }}
        </div>
        <div class="form-group">   
            {{ form_row(form.photo) }}
        </div>

        <button  type="submit" class="btn btn-outline-primary">Créer</button>

        {{form_end(form)}}


        

    
    </div>
</main>
{% endblock %}
